
.container-item {
		padding: 0 10px;
		margin-bottom: 10px;
}
.mb-10 {
		margin-bottom: 10px;
}
.add-card {
		-webkit-tap-highlight-color: transparent;
		background-color: yellow;
		border-radius: 5px;
		box-sizing: border-box;
		color: #000;
		cursor: pointer;
		display: block;
		font-size: 12px;
		line-height: 5vh;
		margin-left: auto;
		margin-right: auto;
		overflow: hidden;
		position: relative;
		text-align: center;
		text-decoration: none;
}
